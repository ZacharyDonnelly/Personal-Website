{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/pages/*": ["src/pages/*"],
            "@/lib/*": ["src/lib/*"],
            "@/styles/*": ["src/styles/*"]
        },
        "typeRoots": ["./node_modules/@types", "**/types"]
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "src/**/*.module.scss",
        "src/**/*.scss",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": ["node_modules", ".next", "dist"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
